{
  "name": "@kollab/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsup src/index.ts --format esm",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "db:setup": "tsx --env-file=.env src/db/setup-database.ts",
    "db:init": "tsx src/db/init-database.ts",
    "db:verify": "tsx src/db/verify-database.ts",
    "db:verify-data": "tsx --env-file=.env src/scripts/verify-database-data.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed-demo": "tsx --env-file=.env src/db/seed-demo.ts",
    "db:seed-demo-data": "tsx --env-file=.env src/scripts/seed-demo-data.ts",
    "db:init-garage": "tsx --env-file=.env src/scripts/init-garage.ts",
    "db:diagnose-garage": "tsx --env-file=.env src/scripts/diagnose-garage.ts",
    "test:garage": "tsx --env-file=.env src/scripts/test-garage-upload.ts",
    "dev:reset": "npm run db:push && npm run redis:flush && npm run dev",
    "db:migrate:test": "cross-env NODE_ENV=test npm run db:push",
    "db:seed:dev": "cross-env ENABLE_DEMO_MODE=true npm run db:seed-demo-data",
    "redis:flush": "redis-cli FLUSHALL || echo 'Redis not available, skipping flush'",
    "diagnose:services": "tsx src/scripts/diagnose-services.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0",
    "@hono/node-server": "^1.13.0",
    "@hono/swagger-ui": "^0.2.2",
    "@hono/zod-validator": "^0.4.0",
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@node-rs/argon2": "^2.0.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.6.0",
    "lucia": "^3.2.0",
    "marked": "^11.0.0",
    "meilisearch": "^0.41.0",
    "postgres": "^3.4.4",
    "prom-client": "^15.1.0",
    "puppeteer": "^24.30.0",
    "redis": "^4.7.0",
    "socket.io": "^4.8.0",
    "turndown": "^7.1.0",
    "turndown-plugin-gfm": "^1.0.0",
    "y-websocket": "^2.0.0",
    "yjs": "^13.6.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.11.0",
    "pg": "^8.16.3",
    "pg-mem": "^3.0.5",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.9"
  }
}
