{
  "name": "kollab",
  "version": "1.0.0",
  "private": true,
  "description": "Kollab - Modern Collaboration Platform",
  "scripts": {
    "start": "powershell -ExecutionPolicy Bypass -File scripts/start.ps1",
    "stop": "powershell -ExecutionPolicy Bypass -File scripts/stop.ps1",
    "dev": "concurrently \"npm run dev:docker\" \"npm run dev:api\" \"npm run dev:web\"",
    "dev:docker": "docker-compose up -d postgres redis garage",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:full": "docker-compose up -d && npm run dev:api & npm run dev:web",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v",
    "db:init": "cd apps/api && npm run db:init",
    "db:setup": "cd apps/api && npm run db:setup",
    "db:verify": "cd apps/api && npm run db:verify",
    "db:migrate": "cd apps/api && npm run db:push",
    "db:seed": "cd apps/api && npm run db:seed-demo",
    "db:seed-demo-data": "cd apps/api && npm run db:seed-demo-data",
    "db:init-garage": "cd apps/api && npm run db:init-garage",
    "db:studio": "cd apps/api && npm run db:studio",
    "db:reset": "docker-compose down -v postgres && docker-compose up -d postgres && sleep 5 && npm run db:setup",
    "redis:cli": "docker exec -it kollab-redis redis-cli",
    "redis:flush": "docker exec -it kollab-redis redis-cli FLUSHALL",
    "redis:info": "docker exec -it kollab-redis redis-cli INFO",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "lint": "npm run lint:api && npm run lint:web",
    "lint:api": "cd apps/api && npm run lint",
    "lint:web": "cd apps/web && npm run lint",
    "test": "npm run test:api && npm run test:web",
    "test:api": "cd apps/api && npm run test",
    "test:web": "cd apps/web && npm run test",
    "test:coverage": "npm run test:coverage:api && npm run test:coverage:web",
    "test:coverage:api": "cd apps/api && npm run test:coverage",
    "test:coverage:web": "cd apps/web && npm run test:coverage",
    "format": "npm run format:api && npm run format:web",
    "format:api": "cd apps/api && npm run format",
    "format:web": "cd apps/web && npm run format",
    "type-check": "npm run type-check:api && npm run type-check:web",
    "type-check:api": "cd apps/api && npm run type-check",
    "type-check:web": "cd apps/web && npm run type-check",
    "install:all": "npm install && cd apps/api && npm install && cd ../web && npm install",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/dist apps/*/.turbo",
    "clean:cache": "npm run redis:flush && rm -rf apps/*/.turbo",
    "validate": "npm run lint && npm run type-check && npm run test",
    "prepare": "npm run build:api",
    "verify": "node -e \"console.log('Pour Windows: .\\\\scripts\\\\verify-startup.ps1'); console.log('Pour Linux/Mac: ./scripts/verify-startup.sh')\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/kollab.git"
  },
  "keywords": [
    "collaboration",
    "workspace",
    "documents",
    "tasks",
    "real-time"
  ],
  "author": "Your Team",
  "license": "MIT"
}
